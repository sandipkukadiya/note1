doctype html
html
  head
    title= title
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0')
    
    link(rel='stylesheet', href='/admin/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/admin/stylesheets/climacons-font.249593b4.css')
    link(rel='stylesheet', href='/admin/stylesheets/feather.5694d1be.css')
    link(rel='stylesheet', href='/admin/stylesheets/app.min.df5e9cc9.css')
    link(rel='stylesheet', href='/admin/stylesheets/style.css')
    link(rel='stylesheet', href='/admin/stylesheets/bootstrap3-wysihtml5.min.css')
    link(rel='stylesheet', href='/admin/fonts/font-awesome/css/font-awesome.min.css')
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css', rel='stylesheet')
    link(rel='stylesheet', href='/scripts/dropzone/dist/min/basic.min.css')
    link(rel='stylesheet', href='/scripts/dropzone/dist/min/dropzone.min.css')
    link(rel='stylesheet', href='/scripts/angular-ui-notification/dist/angular-ui-notification.min.css')
    
    script(src='/admin/javascripts/jquery.2.2.4.min.js')
    
    
  
  body(ng-app='cms', layout='row', ng-cloak='')
    .quick-launch-panel
      .container
        .quick-launcher-inner
          a.close(href='javascript:void(0);', data-toggle='quick-launch-panel') ×
          .css-table-xs
            .col
              a(href='app-calendar.html')
                i.icon-marquee
                span Calendar
            .col
              a(href='app-gallery.html')
                i.icon-drop
                span Gallery
            .col
              a(href='app-messages.html')
                i.icon-mail
                span Messages
            .col
              a(href='app-social.html')
                i.icon-speech-bubble
                span Social
            .col
              a(href='charts-flot.html')
                i.icon-pie-graph
                span Analytics
            .col
              a(href='javascript:;')
                i.icon-esc
                span Documentation
    .app.layout-fixed-header
      .sidebar-panel.offscreen-left(ng-controller='menuBar')
        .brand
          .brand-logo
            img(src='images/logo.c5cdf202.png', height='15', alt='')
          a.toggle-sidebar.hidden-xs.hamburger-icon.v3(href='javascript:void(0)', data-toggle='layout-small-menu')
            span
            span
            span
            span
        nav(role='navigation')
          ul.nav
            li
              a(href='/admin')
                i.fa.fa-flask
                span Dashboard
            li(ng-repeat='value in customPosts')
              a(href='javascript:void(0);')
                i.fa.fa-toggle-on
                span {{value.title}}
              ul.sub-menu
                li
                  a(ng-href='{{value.add.url}}')
                    span {{value.add.title}}
                li
                  a(ng-href='{{value.all.url}}')
                    span {{value.all.title}}
                li
                  a(ng-href='{{value.taxonomyUrl.url}}')
                    span {{value.taxonomyUrl.title}}
            li
              a(href='/admin/media-library')
                i.fa.fa-toggle-on
                span Media
            li
              a(href='/admin/add-custom-post')
                i.fa.fa-toggle-on
                span Custom Post
              ul.sub-menu
                li
                  a(href='/admin/custom-post')
                    span Add Custom Post Type
                li
                  a(href='/admin/all-custom-post')
                    span All Custom Post Types
      .main-panel
        header.header.navbar
          .brand.visible-xs
            .toggle-offscreen
              a.hamburger-icon.visible-xs(href='#', data-toggle='offscreen', data-move='ltr')
                span
                span
                span
            .brand-logo
              img(src='images/logo-dark.5ba260bb.png', height='15', alt='')
            .toggle-chat
              a.hamburger-icon.v2.visible-xs(href='javascript:;', data-toggle='layout-chat-open')
                span
                span
                span
          ul.nav.navbar-nav.hidden-xs
            li
              p.navbar-text  Dashboard 
          ul.nav.navbar-nav.navbar-right.hidden-xs
            li
              a(href='javascript:;', data-toggle='quick-launch-panel')
                i.fa.fa-circle-thin
            li
              a(href='javascript:;', data-toggle='dropdown')
                img.header-avatar.img-circle.ml10(src='images/avatar.21d1cc35.jpg', alt='user', title='user')
                span.pull-left Samuel Perkins
              ul.dropdown-menu
                li
                  a(href='javascript:;') Settings
                li
                  a(href='javascript:;') Upgrade
                li
                  a(href='javascript:;')
                    span.label.bg-danger.pull-right 34
                    span Notifications
                li
                  a(href='javascript:;') Help
                li
                  a(href='signin.html') Logout        
        block content

        footer.content-footer()
            nav.footer-right
              ul.nav
                li
                  a(href='javascript:;') Feedback
                li
                  a.scroll-up(href='javascript:;')
                    i.fa.fa-angle-up
            nav.footer-left.pull-left
              ul.nav
                li
                  a(href='javascript:;')
                    | Copyright 
                    i.fa.fa-copyright
                    span CMS
                    |  2016. All rights reserved
        div(ng-controller='footerCtrl')            
            #add_post_model.modal.bs-modal-sm.in(aria-hidden='false', role='dialog', tabindex='-1', style='display: none;')
                    .modal-dialog(style='width:1200px;')
                      .modal-content
                        .modal-header
                            div(style='display:none')
                                form#my-awesome-dropzone.dropzone.dz-clickable(style='display:none', action='/admin/upload-files')
                                .dz-default.dz-message
                                    span Drop files here to upload
                            button.close(aria-hidden='true', data-dismiss='modal', type='button') ×
                            h4.modal-title Media Library
                        .modal-body
                          .row
                            .box-tab
                              ul.nav.nav-tabs
                                li
                                  a(data-toggle='tab', href='#upload_files', aria-expanded='false') Upload Files
                                li.active
                                  a(data-toggle='tab', href='#media_library', aria-expanded='true') Media Library
                              .tab-content(style='height: 300px;overflow-y: auto;')
                                #upload_files.tab-pane.active
                                    form#my-awesome-dropzone.dropzone.dz-clickable(action='/admin/upload-files')
                                        .dz-default.dz-message
                                            span Drop files here to upload
                                #media_library.tab-pane
                                  .gallery
                                    .col-md-2.col-sm-4.col-xs-6(ng-repeat='post in attachment_posts')
                                        a(title='post.post_title', href='javascript:void(0)')
                                          img(alt='', ng-src="{{post.post_link}}", ng-click='addAttachmentPost($event, post.post_link)')
                        .modal-footer.no-border
                          button.btn.btn-default(data-dismiss='modal', type='button') Close
                          button.btn.btn-primary(type='button', ng-click='attachImage()') Add

                         
        script(src='/admin/javascripts/app.min.4fc8dd6e.js')
        script(src='/admin/javascripts/bootstrap3-wysihtml5.all.min.js')
        script(src='/scripts/underscore/underscore-min.js')
        script(src='/scripts/dropzone/dist/dropzone.js')
        script(src='/scripts/angular/angular.js')
        script(src='/scripts/angular-route/angular-route.min.js')
        script(src='/admin/javascripts/angular-ui-notification.min.js')
        script(src='/admin/javascripts/angular-module.js') 
        script(src='/admin/javascripts/controllers/allPost.js')
        script(src='/admin/javascripts/controllers/addPost.js')
        script(src='/admin/javascripts/controllers/addCustomPost.js')
        script(src='/admin/javascripts/controllers/allCustomPostTypes.js')
        script(src='/admin/javascripts/controllers/mediaLibrary.js')
        script(src='/admin/javascripts/controllers/taxonomy.js')
        script(src='/admin/javascripts/controllers/footerCtrl.js')
       
